<%- include("../navbar") %>

<section class="security_container">
  <div class="container w-75 py-5">
    <% if(messages.error){ %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= messages.error %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %>
    <div class="d-flex align-items-start">
      <nav class="navbar">
        <ul class="navbar-nav flex-column">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/setting/account"
              >Account</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/setting/security">Security</a>
          </li>
        </ul>
      </nav>
      <div class="security_details p-5">
        <h6 class="mb-4 text-uppercase">Change Password</h6>
        <form method="POST" action="/setting/security">
          <div class="row mb-3">
            <label for="inputCurrentPass" class="col-sm-4 col-form-label"
              >Current Password</label
            >
            <div class="col-sm-8">
              <input
                type="password"
                name="currentPassword"
                class="form-control"
                id="inputCurrentPass"
              />
            </div>
          </div>
          <div class="row mb-3">
            <label for="inputNewPass" class="col-sm-4 col-form-label"
              >New Password</label
            >
            <div class="col-sm-8">
              <input
                type="password"
                name="newPassword"
                class="form-control"
                id="inputNewPass"
              />
            </div>
          </div>
          <div class="row mb-3">
            <label for="inputConfirmPass" class="col-sm-4 col-form-label"
              >Confirm Password</label
            >
            <div class="col-sm-8">
              <input
                type="password"
                name="confirmPassword"
                class="form-control"
                id="inputConfirmPass"
              />
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-8">
              <label class="text-lowercase">
                8 characters or longer. Combine upper and lowercase letters and
                numbers.
              </label>
            </div>
          </div>
          <div class="d-flex align-items-center justify-content-end mt-4">
            <button type="reset" class="btn btn-light me-3">Reset</button>
            <button type="submit" class="btn btn-success">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
